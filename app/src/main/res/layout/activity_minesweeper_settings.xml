<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starting_background"
    tools:context="fall2018.csc207project.minesweepergame.MinesweeperSettings">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="244dp"
        android:layout_height="59dp"
        android:layout_below="@+id/button_5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-325dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text="Choose the size of your minsweeper game"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complexity_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="8 X 8"
        android:textSize="20dp"
        android:onClick="onClick" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="10 X 10"
        android:textSize="20dp"
        android:onClick="onClick" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:background="@color/colorPrimary"
        android:text="15 X 15"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="onClick" />

    <EditText
        android:id="@+id/bombs_input"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="80dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="number"
        android:text="3" />

    <Button
        android:id="@+id/set_bombs_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="80dp"
        android:layout_toEndOf="@+id/undo_steps_input"
        android:onClick="setBombs"
        android:text="accept"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="244dp"
        android:layout_height="59dp"
        android:layout_below="@+id/button_5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text="Set your bombs steps here:"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>